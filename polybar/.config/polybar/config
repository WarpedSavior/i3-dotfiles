[colors]
background = #222
;background = #2F343F
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
color9 = #fb4934
;color9 = #a66959
color1 = #cc241d


[bar/bar1]
monitor = eDP1
width = 1366
;width = 911
height = 15
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true  

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Wuncon Siji:pixelsize=9;1
font-3 = IPAGothic,IPA:pixelsize=10;1
font-4 = IPAMincho,IPA:pixelsize=10;1
font-5 = Font Awesome 5 Free:style=Regular:pixelsize=10;1
font-6 = Font Awesome 5 Free:style=Solid:pixelsize=10;1
font-7 = Font Awesome 5 Brands:style=Regular:pixelsize=10;1

modules-left = i3 
modules-center = mpd
modules-right = system-usb-udev pkg battery pulseaudio date network

tray-position = right
tray-padding = 0
tray-transparent = false
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize


